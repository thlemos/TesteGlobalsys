@model ThiagoLemos.Web.MVC.Models.ColaboradorViewModel
@{
    ViewBag.Title = "Inserir Novo";
}

<div class="innerpage">

    <h2 class="sub-header">@ViewBag.Title</h2>

    @{
        string valor = (string)TempData["Error"];
        if (!string.IsNullOrEmpty(valor))
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
    }

    @using (Html.BeginForm("Create", "Colaborador", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.PessoaId, new {@class = "control-label col-sm-2"})
            <div class="col-sm-10">
                @Html.DropDownList("PessoaId", null, "Selecione", new { @class = "form-control" })
                @Html.ValidationMessage("PessoaId")
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.EmpresaId, new {@class = "control-label col-sm-2"})
            <div class="col-sm-10">
                @Html.DropDownList("EmpresaId", null, "Selecione", new { @class = "form-control" })
                @Html.ValidationMessage("EmpresaId")
            </div>
        </div>
        


        <div class="form-group">
            <label class="control-label col-sm-2" for="Cargo">Cargo:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Cargo, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Cargo)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="Salario">Salário:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Salario, new { @class = "form-control MaskDouble" })
                @Html.ValidationMessageFor(model => model.Salario)
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn  btn-primary">Gravar</button>
            </div>
        </div>
    }

    <div>
        <a href="@Url.Action("Index")" class="btn btn-lg btn-link">Voltar</a>
    </div>
</div>
