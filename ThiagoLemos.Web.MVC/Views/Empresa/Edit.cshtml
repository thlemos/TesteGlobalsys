@model ThiagoLemos.Web.MVC.Models.EmpresaViewModel
@{
    ViewBag.Title = "Editar";
}

<div class="innerpage">

    <h2 class="sub-header">@ViewBag.Title</h2>

    @{
        string valor = (string)TempData["Error"];
        if (!string.IsNullOrEmpty(valor))
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
    }

    @using (Html.BeginForm("Edit", "Empresa", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-sm-2" for="Cnpj">Cnpj:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Cnpj, new {@class = "form-control MaskCNPJ"})
                @Html.ValidationMessageFor(model => model.Cnpj)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="Nome">Nome:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Nome, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="RazaoSocial">Razão Social:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.RazaoSocial, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.RazaoSocial)
            </div>
        </div>
        
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn  btn-primary">Gravar</button>
            </div>
        </div>
    }

    <div>
        <a href="@Url.Action("Index")" class="btn btn-lg btn-link">Voltar</a>
    </div>
</div>
